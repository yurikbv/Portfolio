extends ../main-layout

block title
  | Works

block content

  include ../sections/hero
  section.section.works-head
    svg(
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1000 100"
    class="triangle works-head__triangle"
    preserveAspectRatio="none")
      polygon(points="0,0 0,100 1000,100")

    svg(
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1000 100"
    class="triangle works-head__triangle"
    preserveAspectRatio="none")
      polygon(points="0,100 1000,100 1000,0")
    .title.section__title My Last Works
      +image-svg("works__section--image","works_header","0 0 498.161 175.44",357,125)

  section.section.slider
    .slider__desc
      .slider__desc--info
        .slider__desc--title
          .block-title.subtitle Some site
        .slider__desc--skills HTML,CSS,JavaScript
        .slider__desc--buttons
          .slider__desc--btn
            a(href="").btn Look Site
          .slider__desc--btn
            a(href="").btn PSD File
    .slider__display
      .slideshow
        .slideshow__display
          .slideshow__preloader
          img.slideshow__display-pic(src="./img/site-Bakery.png")
        ul.slideshow__list
          - var images = ['./img/site-Bakery.png','./img/site-film.png','./img/site-glow.png','./img/site-j-wood.png','./img/site-maker.png']
          - for (var i = 0; i < images.length; i++)
            if i === 0
              li(class="slideshow__item slideshow__item--active")
                a.slideshow__link(href=images[i])
                  img.slideshow__image(src=images[i])
            else
              li(class="slideshow__item")
                a.slideshow__link(href=images[i])
                  img.slideshow__image(src=images[i])
      .slider__buttons
        .slider__btn.slider__btn--prev
          .slider-btn__display
            ul.slider-btn__list
              - var images = ['./img/site-Bakery.png','./img/site-film.png','./img/site-glow.png','./img/site-j-wood.png','./img/site-maker.png']
              - for (var i = 0; i < images.length; i++)
                if i === 0
                  li(class="slider-btn__item slider-btn__item--active")
                    img.slider__btn--image(src=images[i])
                else
                  li(class="slider-btn__item")
                    img.slider__btn--image(src=images[i])
          span.shadow.shadow__prev
          +image-svg("slider__arrow slider__arrow--prev","portf_arrow_up")
        .slider__btn.slider__btn--next
          .slider-btn__display
            ul.slider-btn__list
              - var images = ['./img/site-Bakery.png','./img/site-film.png','./img/site-glow.png','./img/site-j-wood.png','./img/site-maker.png']
              - for (var i = 0; i < images.length; i++)
                if i === 2
                  li(class="slider-btn__item slider-btn__item--active")
                    img.slider__btn--image(src=images[i])
                else
                  li(class="slider-btn__item")
                    img.slider__btn--image(src=images[i])
          span.shadow.shadow__next
          +image-svg("slider__arrow slider__arrow--next","portf_arrow_down")

  section.reviews
  include ../sections/footer
