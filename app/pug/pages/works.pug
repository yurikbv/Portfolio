extends ../main-layout

block title
  | Works

block content

  include ../sections/hero
  section.section.works-head
    svg(
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1000 100"
    class="triangle works-head__triangle"
    preserveAspectRatio="none")
      polygon(points="0,0 0,100 1000,100")

    svg(
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1000 100"
    class="triangle works-head__triangle"
    preserveAspectRatio="none")
      polygon(points="0,100 1000,100 1000,0")
    .title.section__title My Last Works
      +image-svg("works__section--image","works_header","0 0 498.161 175.44",357,125)

  section.section.slider
    .slider__desc
      .slider__desc--info
        .slider__desc--title
          .block-title.subtitle Some site
        .slider__desc--skills HTML,CSS,JavaScript
        .slider__desc--buttons
          .slider__desc--btn
            a(href="").btn Look Site
          .slider__desc--btn
            a(href="").btn PSD File
    .slider__display
      .slider__image
        img(src="./img/site-glow.png").slider__display--picture

      .slider__buttons
        .slider__btn.slider__btn--prev
          .slider-btn__display
            ul.slider-btn__list
              li.slider-btn__item
                img(src="./img/site-Bakery.png").slider__btn--image
              li.slider-btn__item.slider-btn__item--active
                img(src="./img/site-film.png").slider__btn--image
              li.slider-btn__item
                img(src="./img/site-glow.png").slider__btn--image
              li.slider-btn__item
                img(src="./img/site-j-wood.png").slider__btn--image
              li.slider-btn__item
                img(src="./img/site-maker.png").slider__btn--image
          span.shadow
          +image-svg("slider__arrow","portf_arrow_down")
        .slider__btn.slider__btn--next
          .slider-btn__display
            ul.slider-btn__list
              li.slider-btn__item
                img(src="./img/site-Bakery.png").slider__btn--image
              li.slider-btn__item
                img(src="./img/site-film.png").slider__btn--image
              li.slider-btn__item
                img(src="./img/site-glow.png").slider__btn--image
              li.slider-btn__item.slider-btn__item--active
                img(src="./img/site-j-wood.png").slider__btn--image
              li.slider-btn__item
                img(src="./img/site-maker.png").slider__btn--image
          span.shadow
          +image-svg("slider__arrow","portf_arrow_up")

  section.reviews
  include ../sections/footer
